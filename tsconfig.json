{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "webworker",
      "dom",
      "es2020"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "./client/**/*",
    "./common/**/*",
  ]
}
